root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = tab

[*.{markdown,md}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.{tsv,tab}]
indent_style = tab
indent_size = tab
trim_trailing_whitespace = false

[*.{cff,yaml,yml}]
indent_style = space
indent_size = 2
